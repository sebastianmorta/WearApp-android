<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editTextLocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewtest2"
        android:layout_width="368dp"
        android:layout_height="109dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="336dp"
        android:text="test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchLocation"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/textViewDate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/country_text"
        android:fontFamily="@font/caveat_brush"
        android:text="Wybierz datę"
        android:textColor="#122259"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ed_location"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="98dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="458dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="casual"
        android:text="WEARAPP"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4273FF"
        android:textSize="44sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Something went wrong"
        android:visibility="gone" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Za ile dni będziesz potrzebować nowych ubrań"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDate"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_editor_absoluteX="36dp" />


    <TextView
        android:id="@+id/textViewtest"
        android:layout_width="368dp"
        android:layout_height="109dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="40dp"
        android:text="test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floatingbtn"
        tools:layout_editor_absoluteX="56dp" />

    <EditText
        android:id="@+id/ed_location"
        android:layout_width="285dp"
        android:layout_height="64dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/country_text"
        android:drawableLeft="@drawable/ic_baseline_location_city_24"
        android:ems="10"
        android:hint="Wpisz miasto"
        android:fontFamily="@font/caveat_brush"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/switchLocation"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate"
        tools:layout_editor_absoluteX="101dp" />

    <Switch
        android:id="@+id/switchLocation"
        android:layout_width="285dp"
        android:layout_height="64dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/country_text"
        android:drawableLeft="@drawable/ic_baseline_gps_fixed_24"
        android:fontFamily="@font/caveat_brush"
        android:text="twoja lokalizacja"
        app:layout_constraintBottom_toTopOf="@+id/textViewtest2"
        app:layout_constraintTop_toBottomOf="@+id/ed_location"
        tools:layout_editor_absoluteX="101dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbtn"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:layout_marginTop="98dp"
        android:layout_marginBottom="33dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/textViewtest"
        app:layout_constraintTop_toBottomOf="@+id/textViewtest2"
        app:srcCompat="@drawable/arrow"
        tools:layout_editor_absoluteX="328dp" />

</androidx.constraintlayout.widget.ConstraintLayout>